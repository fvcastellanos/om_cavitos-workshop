<odoo>
    <data>

        <!-- Search View -->
        <record id="view_product_category_search" model="ir.ui.view">
            <field name="name">Product Category Search</field>
            <field name="model">workshop.product.category</field>
            <field name="arch" type="xml">
                <search>
                    <field name="code" />
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_product_category_tree" model="ir.ui.view">
            <field name="name">Product Category Tree</field>
            <field name="model">workshop.product.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code" />
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_product_category_form" model="ir.ui.view">
            <field name="name">Product Category Form</field>
            <field name="model">workshop.product.category</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="code" />
                        <field name="name"/>
                        <field name="description" />
                    </group>
                    <group>
                        <field name="products" />
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>
