<?xml version="1.0"?>
<odoo>
    <record id="view_tree_brand_line" model="ir.ui.view">
        <field name="name">Brand Line Form</field>
        <field name="model">workshop.car.line</field>
        <field name="arch" type="xml">
            <tree colors="decoration-muted:is_done==True">
                <field name="brand_id" />
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_form_brand_line" model="ir.ui.view">
        <field name="name">Brand Line Form</field>
        <field name="model">workshop.car.line</field>
        <field name="arch" type="xml">

            <form>
                <group>
                    <field name="brand_id" />
                    <field name="name" />
                    <field name="description" />
                </group>
            </form>

        </field>

    </record>
</odoo>
